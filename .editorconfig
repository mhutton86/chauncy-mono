# .editorconfig file
root = true

# Shell formatting. Utilized by IDEs and shfmt tool
[*.sh]
# like -i=4
indent_style = space
indent_size = 2

# shfmt-specific options
## This fixes an issue with bash scripts being parsed as POSIX scripts
shell_variant      = bash # like -ln=bash


[*.{yml,yaml}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


